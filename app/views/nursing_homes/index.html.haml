.main
  - if current_user
    = link_to 'Nytt äldreboende', new_nursing_home_path, class: "btn btn-small btn-primary new"
  - cache do
    %h1.title= "Hitta & jämför äldreboenden"
    = render 'filter'

    %ul.switch-view
      %li.active= link_to "Översikt", '#tab-element-list'
      %li= link_to "Visa på karta", '#tab-element-map'

    %ul.results
      - @nursing_homes.each do |nursing_home|
        %li{ data_dashes(nursing_home), class: ("drafted" if nursing_home.draft) }
          - unless nursing_home.images.blank?
            .image= link_to image_tag(nursing_home.images.first.image.url(:thumb), :alt => nursing_home.name), nursing_home
          .summary
            .compare-check
              = check_box_tag "compare-#{nursing_home.id}", nursing_home.id, false, "data-compare" => nursing_home.id
              = label_tag "compare-#{nursing_home.id}", "Lägg till i Min lista"

            %h2= link_to nursing_home.name, nursing_home
            %p.neighborhood= nursing_home.neighborhood
            %p.owner-type= nursing_home.categories.map(&:name).join(", ")
            %p.description= truncate(strip_tags(nursing_home.description), :length => 200)
  - if current_user
    = link_to 'Nytt äldreboende', new_nursing_home_path, class: "btn btn-small btn-primary new"
